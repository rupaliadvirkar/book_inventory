			<%else %>
		        Books&nbsp;&nbsp;<%=link_to 'Authors', authors_books_path %>
	        <%end %>
       		 <div style="float:right;">
            	<strong>Welcome</strong>
            	<%=current_user.email %> | <%=link_to 'logout', '/logout' %>
        	</div>
        <%end %>
        <%= yield %>
    </body>
</html>
