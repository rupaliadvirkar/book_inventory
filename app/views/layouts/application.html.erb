<html>
    <head>
        <title>BookInventory</title>
        <%= stylesheet_link_tag    "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <%if current_user %>
	        <%if ACTIONS_RELATED_TO_AUTHORS.include?(action_name) %>
		        <%=link_to 'Books', books_path %>&nbsp;&nbsp;
